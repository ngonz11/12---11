	<script type="text/javascript">
		function first()
{
	var k=document.getElementById('value').value;
	k=Number(k);
	if ((k>=25)==true)
	{
		var b=k-25;
		document.getElementById('change').innerHTML="Thanks, your change is "+b;
		alert('enjoy your coke')
	}
	else
	{
		var b=25-k;
		alert('Your amount is not sufficient');
		document.getElementById('change').innerHTML="Your EMoney need"+b+" more to have one";
	}
}
